{
	"compilerOptions": {
    "jsx": "react",
		"strictNullChecks": true,
    "moduleResolution": "node",
    "module": "esnext",
    "lib": ["ES2016", "DOM"],
		"declaration": true,
		"declarationDir": "dist",
    "esModuleInterop": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": false,
		"rootDir": "."
	},
	"include": ["./**/*.ts", "./**/*.d.ts"]
}
